<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodHive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>




    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="spinBars">true</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">

        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>

    </style>

    <style name="Rating" parent="Theme.FoodHive">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorSecondary">#FFFF63</item>
    </style>

    <style name="MessageSendFloatingButton" parent="Theme.FoodHive">
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.FoodHive.SplashTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>

    </style>


</resources>